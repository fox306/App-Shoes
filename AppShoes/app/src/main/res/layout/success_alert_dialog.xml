<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertDialogSuccess"
    android:layoutAnimation="@anim/layout_animation"
    android:background="@drawable/background_dialog"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    
    <ImageView
        android:id="@+id/image_shop"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/success_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/subTitle_text"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Thank you very much\nfor the order, \nmake sure you get the best service"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#232323"
        android:textAlignment="center"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_yes"
        android:fontFamily="@font/poppins_semibold"
        android:padding="15dp"
        android:textColor="#fafafa"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Shopping Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subTitle_text"
        app:layout_constraintVertical_bias="0.225"
        tools:layout_editor_absoluteX="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>